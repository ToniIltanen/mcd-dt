<div class="login center col-xs-12 col-sm-8 col-md-4 col-lg-3 col-centered">
  <div class="title">
    <h3>Kirjaudu sisään</h3>
  </div>
  <div class="login-content">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label "Sähköposti" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "Sähköpostiosoite" %>
      </div>

      <div class="field">
        <%= f.label "Salasana" %><br />
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label "Muista minut" %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Kirjaudu" %>
      </div>
    <% end %>
  </div>
</div>